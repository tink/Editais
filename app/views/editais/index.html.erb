<h1>Editais</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Resumo</th>
    <th>Data publicação</th>
    <th>Data limite</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @editais.each do |edital| %>
  <tr>
    <td><%= edital.nome %></td>
    <td><%= edital.resumo %></td>
    <td><%= l edital.data_publicacao %></td>
    <td><%= l edital.data_limite %></td>
    <td><%= link_to t('navigation.show'), edital %></td>
    <td><%= link_to t('navigation.edit'), edit_edital_path(edital) %></td>
    <td><%= link_to t('navigation.destroy'), edital, :confirm => t('navigation.confirm'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo edital', new_edital_path %>
